<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fotoSesio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Body Combat"
            android:id="@+id/nomSesio"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fotoSesio"
            android:layout_toEndOf="@+id/fotoSesio" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/fotoSesio"
            android:layout_toRightOf="@+id/fotoSesio"
            android:layout_toEndOf="@+id/fotoSesio"
            android:src="@drawable/ic_query_builder_indigo_a400_24dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/03/2016 09:00"
            android:id="@+id/dataHorariSesio"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/imageView2"
            android:layout_toRightOf="@+id/fotoSesio"
            android:layout_toEndOf="@+id/fotoSesio"
            android:src="@drawable/ic_query_builder_indigo_a400_24dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepeta lala"
            android:id="@+id/NomMonitora"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignLeft="@+id/dataHorariSesio"
            android:layout_alignStart="@+id/dataHorariSesio" />

    </RelativeLayout>
</LinearLayout>