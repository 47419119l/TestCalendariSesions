<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sandra.testcalendarisesions.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/sesio1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="30dp"
                android:background="@mipmap/zumba" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/sesio2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sesio1"
                android:layout_toEndOf="@+id/sesio1"
                android:layout_marginRight="30dp"
                android:background="@mipmap/bodycombat" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/sesio3"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sesio2"
                android:layout_toEndOf="@+id/sesio2"
                android:layout_marginRight="30dp"
                android:background="@mipmap/step" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/sesio4"
                android:layout_alignTop="@+id/sesio3"
                android:layout_toRightOf="@+id/sesio3"
                android:layout_toEndOf="@+id/sesio3"
                android:layout_marginRight="30dp"
                android:background="@mipmap/bodypump" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/sesio5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sesio4"
                android:layout_toEndOf="@+id/sesio4"
                android:background="@mipmap/fitness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zumba"
                android:id="@+id/textView"
                android:textSize="10dp"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignLeft="@+id/sesio1"
                android:layout_alignStart="@+id/sesio1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B. Combat"
                android:id="@+id/textView2"
                android:textSize="10dp"
                android:layout_below="@+id/sesio2"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step"
                android:id="@+id/textView3"
                android:textSize="10dp"
                android:layout_below="@+id/sesio2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B. Pump"
                android:id="@+id/textView4"
                android:textSize="10dp"
                android:layout_below="@+id/sesio3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness"
                android:id="@+id/textView5"
                android:textSize="10dp"
                android:layout_below="@+id/sesio5"
                android:layout_alignRight="@+id/sesio5"
                android:layout_alignEnd="@+id/sesio5" />
        </RelativeLayout>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DatesSesions"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listSesions"
            android:layout_below="@+id/DatesSesions"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
